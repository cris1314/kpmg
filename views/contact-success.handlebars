<!-- Page Content -->
    <div class="container">

      <!-- Jumbotron Header -->
      <header class="jumbotron my-4">
        <h1 class="display-3">A Warm Welcome!</h1>
        <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsa, ipsam, eligendi, in quo sunt possimus non incidunt odit vero aliquid similique quaerat nam nobis illo aspernatur vitae fugiat numquam repellat.</p>
        <a href="#" class="btn btn-primary btn-lg">Call to action!</a>
      </header>
        <h2 align="center">tu email {{data.email}} a sido registrado exitosamente .... FELIZ?</h2>
      <!-- Page Features -->
      <div class="row text-center">
          {{#each eventos}}
            <div class="col-lg-3 col-md-6 mb-4">
                  <div class="card">
                    <img class="card-img-top" src="http://placehold.it/500x325" alt="">
                    <div class="card-body">
                      <h4 class="card-title">{{this.nombre}}</h4>
                      <p class="card-text">{{this.descripcion}}</p>
                    </div>
                    <div class="card-footer">
                      <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Asistir</button>
                       
                    </div>
                  </div>
                </div>
          <!-- Modal -->
                    <div id="myModal" class="modal fade" role="dialog">
                      <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                          <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            
                          </div>
                          <div class="modal-body">
                             <form class="form-inline" method="POST" action="/contact">
                              <div class="form-group">
                                  <input style="display:none;" type="text" class="form-control" value="{{this.nombre}}" id="evento" name="evento" readonly>
                                 
                                <label for="email">Email:</label>
                                <input type="email" class="form-control" id="email" name="email">
                              </div>
                                 <br>
                        <button type="submit" value="submit" class="btn btn-primary" style="margin: 20px auto;">Enviar</button>
                            </form> 
                          </div>
                          <div class="modal-footer">
                              
                          </div>
                        </div>

                      </div>
                    </div>
          
        {{/each}}
        


      </div>
      <!-- /.row -->
       
    </div>
    <!-- /.container -->
